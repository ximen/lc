{
	"name": "Leakage controller",
	"short_name": "lc_config",
	"version": 2,
	"topics": [
		{
			"name": "WiFi",
			"std_wifi": true,
			"default_ssid": "LC",
			"default_psk": ""
		},
		{
			"name": "Protocols",
			"short_name": "protocols_topic",
			"elements": [
				{
					"name": "MQTT",
					"short_name": "mqtt_enable",
					"type": "boolean",
					"default": false
				},
				{
					"name": "CAN",
					"short_name": "can_bus_enable",
					"type": "boolean",
					"default": false
				},
				{
					"name": "Telegram",
					"short_name": "tg_enable",
					"type": "boolean",
					"default": false
				}
			]
		},
		{
			"name": "MQTT",
			"short_name": "mqtt_topic",
			"std_mqtt": true,
			"discovery": false,
			"depends_on": "mqtt_enable"
		},
		{
			"name": "MQTT topics",
			"short_name": "mqtt_topics_topic",
			"depends_on": "mqtt_enable",
			"elements": [
				{
					"name": "Sesnsors prefix",
					"short_name": "sensors_prefix",
					"type": "string",
					"size": 50,
					"default": "home"
				}, {
					"name": "Drives prefix",
					"short_name": "valves_prefix",
					"type": "string",
					"size": 50,
					"default": "home"
				}
			]
		},
		{
			"name": "CAN",
			"short_name": "can_topic",
			"depends_on": "can_bus_enable",
			"elements":[]
		},
		{
			"name": "Telegram",
			"short_name": "tg_topic",
			"depends_on": "tg_enable",
			"elements":[{
				"name": "Bot API key",
				"short_name": "api_key",
				"size": 50,
				"type": "string"
			}, {
				"name": "Chat ID",
				"short_name": "chat_id",
				"size": 20,
				"type": "string"
			}]
		},
		{
			"name": "Notifications",
			"short_name": "notify_topic",
			"elements": [{
				"name": "Buzzer",
				"short_name": "buzzer_notify",
				"type": "boolean",
				"default": true
			},{
				"name": "Relay",
				"short_name": "relay_notify",
				"type": "boolean",
				"default": true
			},{
				"name": "Telegram",
				"short_name": "tg_notify",
				"type": "boolean",
				"depends_on": "tg_enable",
				"default": false
			}]
		},{
			"name": "Sensors & drives",
			"short_name": "sensors_topic",
			"elements": [{
				"name": "Sensor 1 name",
				"short_name": "sensor1_name",
				"type": "string",
				"size": 50,
				"default": "Sensor1"
			},{
				"name": "Sensor 2 name",
				"short_name": "sensor2_name",
				"type": "string",
				"size": 50,
				"default": "Sensor2"
			},{
				"name": "Sensor 3 name",
				"short_name": "sensor3_name",
				"type": "string",
				"size": 50,
				"default": "Sensor3"
			},{
				"name": "Sensor 4 name",
				"short_name": "sensor4_name",
				"type": "string",
				"size": 50,
				"default": "Sensor4"
			},{
				"name": "Sensor 5 name",
				"short_name": "sensor5_name",
				"type": "string",
				"size": 50,
				"default": "Sensor5"
			},{
				"name": "Sensor 6 name",
				"short_name": "sensor6_name",
				"type": "string",
				"size": 50,
				"default": "Sensor6"
			},{
				"name": "Drive 1 name",
				"short_name": "valve1_name",
				"type": "string",
				"size": 50,
				"default": "Drive1"
			},{
				"name": "Drive 2 name",
				"short_name": "valve2_name",
				"type": "string",
				"size": 50,
				"default": "Drive2"
			}]	
		}
	]
}