{
	"name": "Leakage controller",
	"short_name": "lc_config",
	"version": 1,
	"topics": [
		{
			"name": "WiFi",
			"std_wifi": true,
			"default_ssid": "LC",
			"default_psk": ""
		},
		{
			"name": "Protocols",
			"short_name": "protocols_topic",
			"elements": [
				{
					"name": "MQTT",
					"short_name": "mqtt_enable",
					"type": "boolean",
					"default": false
				},
				{
					"name": "CAN",
					"short_name": "can_bus_enable",
					"type": "boolean",
					"default": false
				},
				{
					"name": "Telegram",
					"short_name": "tg_enable",
					"type": "boolean",
					"default": false
				}
			]
		},
		{
			"name": "MQTT",
			"short_name": "mqtt_topic",
			"std_mqtt": true,
			"depends_on": "mqtt_enable"
		},
		{
			"name": "CAN",
			"short_name": "can_topic",
			"depends_on": "can_bus_enable",
			"elements":[]
		},
		{
			"name": "Telegram",
			"short_name": "tg_topic",
			"depends_on": "tg_enable",
			"elements":[{
				"name": "Bot API key",
				"short_name": "api_key",
				"size": 50,
				"type": "string"
			}, {
				"name": "Chat ID",
				"short_name": "chat_id",
				"size": 20,
				"type": "string"
			}]
		},
		{
			"name": "Notifications",
			"short_name": "notify_topic",
			"elements": [{
				"name": "Buzzer",
				"short_name": "buzzer_notify",
				"type": "boolean",
				"default": true
			},{
				"name": "Relay",
				"short_name": "relay_notify",
				"type": "boolean",
				"default": true
			},{
				"name": "MQTT",
				"short_name": "mqtt_notify",
				"type": "boolean",
				"depends_on": "mqtt_enable",
				"default": false
			},{
				"name": "CAN",
				"short_name": "can_notify",
				"type": "boolean",
				"depends_on": "can_bus_enable",
				"default": false
			},{
				"name": "Telegram",
				"short_name": "tg_notify",
				"type": "boolean",
				"depends_on": "tg_enable",
				"default": false
			}]
		},
		{
			"name": "Sensors",
			"short_name": "sensors_topic",
			"elements": [
				{
					"name": "Sensor 1 type",
					"short_name": "sensor1_type",
					"type": "int8"
				},
				{
					"name": "Sensor 1 MQTT topic",
					"short_name": "sensor1_mqtt",
					"type": "array",
					"size": 20,
					"depends_on": "sensor1_type",
					"depends_on_value": "1"
				},
				{
					"name": "Sensor 1 Mesh Address",
					"short_name": "sensor1_mesh",
					"type": "array",
					"size": 4,
					"depends_on": "sensor1_type",
					"depends_on_value": "2"
				},
				{
					"name": "Sensor 2 type",
					"short_name": "sensor2_type",
					"type": "int8"
				},
				{
					"name": "Sensor 2 MQTT topic",
					"short_name": "sensor2_mqtt",
					"type": "array",
					"size": 20,
					"depends_on": "sensor2_type",
					"depends_on_value": "1"
				},
				{
					"name": "Sensor 2 Mesh Address",
					"short_name": "sensor2_mesh",
					"type": "array",
					"size": 4,
					"depends_on": "sensor2_type",
					"depends_on_value": "2"
				},
				{
					"name": "Sensor 3 type",
					"short_name": "sensor3_type",
					"type": "int8"
				},
				{
					"name": "Sensor 3 MQTT topic",
					"short_name": "sensor3_mqtt",
					"type": "array",
					"size": 20,
					"depends_on": "sensor3_type",
					"depends_on_value": "1"
				},
				{
					"name": "Sensor 3 Mesh Address",
					"short_name": "sensor3_mesh",
					"type": "array",
					"size": 4,
					"depends_on": "sensor3_type",
					"depends_on_value": "2"
				}
			]
		}
	]
}